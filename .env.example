# Jamie Environment Configuration
# Copy this file to .env and fill in the values

# ===================
# Discord Bot Settings
# ===================

# Discord bot token (from Discord Developer Portal)
DISCORD_BOT_TOKEN=your_bot_token_here

# CUA Controller URL (where the agent runs)
CUA_CONTROLLER_URL=http://localhost:8000

# Webhook server settings (for receiving status updates)
WEBHOOK_HOST=0.0.0.0
WEBHOOK_PORT=8080

# ===================
# CUA Controller Settings
# ===================

# Discord account for automation (NOT the bot account)
# This account will be logged into Discord Web to stream
DISCORD_EMAIL=streaming_account@example.com
DISCORD_PASSWORD=your_password_here

# Anthropic API key for Claude model access
ANTHROPIC_API_KEY=sk-ant-your-key-here

# Controller server settings
CONTROLLER_HOST=0.0.0.0
CONTROLLER_PORT=8000

# Maximum API cost per streaming session (USD)
MAX_BUDGET_PER_SESSION=2.0

# ===================
# Docker Settings
# ===================

# Docker image for CUA sandbox
CUA_DOCKER_IMAGE=trycua/cua-xfce:latest

# Sandbox resource limits
SANDBOX_MEMORY=4GB
SANDBOX_CPU=2
